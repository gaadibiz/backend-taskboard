            "default": ""
          },
          {
            "in": "query",
            "name": "to_date",
            "description": "Format will be YYYY-MM-DD",
            "required": false,
            "type": "string",
            "default": ""
          },
          {
            "in": "query",
            "name": "pageNo",
            "description": "Page number",
