      "get": {
        "tags": ["Inventory"],
        "summary": "Get all inventory",
        "description": "This endpoint is used to get inventory details.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "header",
