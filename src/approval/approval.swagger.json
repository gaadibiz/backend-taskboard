            "type": "string",
            "default": "",
            "required": false
          },
          {
            "in": "query",
            "name": "status",
            "type": "string",
            "enum": ["REQUESTED", "ROLLBACK", "APPROVED"],
            "required": false
          },
          {
            "in": "query",
            "name": "from_date",
