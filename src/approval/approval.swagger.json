        "parameters": [
          {
            "in": "header",
            "name": "auth-Token",
            "type": "string",
            "required": true
          },
          {
            "in": "query",
            "name": "table_name",
            "type": "string",
            "required": true
          },
          {
            "in": "query",
            "name": "columns",
            "type": "array",
            "items": { "type": "string" },
            "required": false
          },
          {
            "in": "query",
