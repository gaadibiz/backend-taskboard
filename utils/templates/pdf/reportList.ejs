<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dynamic Inquiry List</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <style>
      body {
        background-color: #f4f4f4;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      .container {
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 10px;
        max-width: 100%;
        margin: 10px auto;
        position: relative;
      }
      .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 2px solid #811a08;
        padding-bottom: 10px;
        margin-bottom: 20px;
        position: relative;
      }
      .header img {
        padding: 7px;
        max-width: 100px;
        height: auto;
        margin-right: 20px;
        border: 1px solid #d384767e;
        border-radius: 50%;
      }
      .header h1 {
        padding: 0px;
        margin: 0px;
        font-size: 1.8rem;
        font-weight: bold;
        color: #811a08;
        margin: 0;
      }
      .header .header-content {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 10px;
      }
      .list-summary {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding: 10px;
        background: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 5px;
      }
      .list-summary div {
        font-size: 0.9rem;
        color: #444;
      }
      .list-summary .title {
        font-weight: bold;
        color: #333;
      }
      h4 {
        font-size: 1rem;
        font-weight: 600;
        color: #333;
      }
      table {
        margin-top: 20px;
        width: 100%;
        border-collapse: collapse;
      }
      thead {
        background-color: #0056b3;
        color: #fff;
      }
      thead tr th {
        font-weight: bold;
        font-size: 0.85rem;
        text-transform: uppercase;
        color: #811a08;
        padding: 12px;
        border: 1px solid #ddd;
      }
      td {
        font-size: 0.83rem;
        padding: 10px;
        border: 1px solid #ddd;
        color: #666;
        text-align: left;
      }
      .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
      }
      .table-striped tbody tr:hover {
        background-color: #eaeaea;
      }
      .footer {
        text-align: center;
        margin-top: 20px;
        font-size: 0.85rem;
        color: #777;
      }
      html,
      body {
        margin: 0;
        padding: 0;
        height: 100%;
      }
      .page-header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background: white;
        z-index: 1000;
        border-bottom: 2px solid #ddd;
        padding: 10px 20px;
      }
      .content {
        margin-top: 120px;
      }
      @media print {
        .page-header {
          position: absolute;
        }
        .container {
          margin-top: 160px;
        }
      }
    </style>
  </head>
  <body>
    <div class="page-header">
      <!-- Header with Logo and Organization Name -->
      <div class="header">
        <% if (organizations_name !== "") { %>
        <div class="header-content">
          <img
            src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS1eLST7kecbBtQml-t592RzLjmRPqh97karg&s"
            alt="Organization Logo"
            class="mb-3"
          />
          <h1><%= organizations_name %></h1>
        </div>
        <% } %>
      </div>
    </div>

    <div class="container content">
      <!-- List Summary -->
      <div class="list-summary">
        <div class="title">List Type: <%= listType %></div>
        <% if (fromDate || toDate !== "") { %>
        <div>From: <%= fromDate %> To: <%= toDate %></div>
        <% } %>
        <div>No. of Entries: <%= students.length %></div>
      </div>

      <!-- Dynamic Columns -->
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <% if (listType === 'INQUIRY') { %>
            <tr>
              <th>INQUIRY NO.</th>
              <th>BATCH</th>
              <th>PROGRAM</th>
              <th>NAME</th>
              <th>CONTACT NO.</th>
              <th>INQUIRY DATE</th>
              <th>FOLLOW-UP DATE</th>
              <th>INQUIRY REFERENCE</th>
            </tr>
            <% } else if (listType === 'ADMISSION') { %>
            <tr>
              <th>SR NO.</th>
              <th>STUDENT ID</th>
              <th>PROGRAM</th>
              <th>NAME</th>
              <th>FATHER'S NAME</th>
              <th>BATCH</th>
              <th>ADMISSION DATE</th>
              <th>CONTACT NO.</th>
            </tr>
            <% } else if (listType === 'STUDENT') { %>
            <tr>
              <th>SR NO.</th>
              <th>STUDENT ID</th>
              <th>PROGRAM</th>
              <th>BATCH</th>
              <th>STUDENT NAME</th>
              <th>CONTACT NO.</th>
              <th>EMAIL</th>
            </tr>
            <% } %>
          </thead>
          <tbody>
            <% students.forEach((student, index) => { %> <% if (listType ===
            'INQUIRY') { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= student.batch %></td>
              <td><%= student.program %></td>
              <td><%= student.name %></td>
              <td><%= student.contact %></td>
              <td><%= student.inquiryDate %></td>
              <td><%= student.followupDate %></td>
              <td><%= student.inquiryReference %></td>
            </tr>
            <% } else if (listType === 'ADMISSION') { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= student.studentID %></td>
              <td><%= student.program %></td>
              <td><%= student.name %></td>
              <td><%= student.fatherName %></td>
              <td><%= student.batch %></td>
              <td><%= student.admissionDate %></td>
              <td><%= student.contact %></td>
            </tr>
            <% } else if (listType === 'STUDENT') { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= student.studentID %></td>
              <td><%= student.program %></td>
              <td><%= student.batch %></td>
              <td><%= student.name %></td>
              <td><%= student.contact %></td>
              <td><%= student.email %></td>
            </tr>
            <% } %> <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
